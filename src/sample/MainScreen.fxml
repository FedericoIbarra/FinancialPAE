<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.MainScreen"
            fx:id="gp">

    <children>

        <Button fx:id="bt_leng" AnchorPane.leftAnchor="750" AnchorPane.topAnchor="7" styleClass="buttonUp"/>

        <StackPane AnchorPane.leftAnchor="0">
            <Rectangle width="200" height="600" fill="#BFC4A4"/>
            <VBox GridPane.columnIndex="1" GridPane.rowIndex="0" alignment="TOP_CENTER" spacing="15">
                <ImageView layoutX="20.0" layoutY="20.0" fitHeight="100.0" fitWidth="100.0" preserveRatio="true">
                    <image>
                        <Image url="https://specials-images.forbesimg.com/imageserve/5b8eb1b3a7ea434b99d54b36/960x0.jpg?fit=scale"/>
                    </image>
                </ImageView>

                <Label text="El Jeff Bezos" fx:id="lb_name" styleClass="titles" />

                <padding>
                    <Insets top="45.0" />
                </padding>

            </VBox>

            <AnchorPane>
                <Button text="Log Out" styleClass="buttonIn" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="75" onAction="#logOut"/>
            </AnchorPane>
        </StackPane>

        <VBox AnchorPane.leftAnchor="280" alignment="CENTER_LEFT" spacing="55" minWidth="600">

            <padding>
                <Insets top="70.0"/>
            </padding>

            <children>
                <Label fx:id="lb_title" styleClass="titles2" alignment="CENTER"/>
                <Button fx:id="bt_add"  styleClass="addButton"/>
                <Button fx:id="bt_state"   styleClass="moneyIcon"/>
                <Button fx:id="bt_balance"  styleClass="balanceIcon"/>
                <Button fx:id="bt_graphics"  styleClass="graphicsIcon"/>
            </children>
        </VBox>

    </children>


</AnchorPane>
