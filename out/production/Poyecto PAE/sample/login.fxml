<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.PasswordField?>

<?import javafx.scene.layout.StackPane?>

<?import javafx.scene.layout.AnchorPane?>
<AnchorPane fx:id="gp" fx:controller="sample.LoginController"
            xmlns:fx="http://javafx.com/fxml" >

    <padding>
        <Insets topRightBottomLeft="10"/>
    </padding>

    <StackPane AnchorPane.bottomAnchor="150" AnchorPane.topAnchor="120" AnchorPane.leftAnchor="300" AnchorPane.rightAnchor="150">
    <GridPane StackPane.alignment="CENTER" vgap="10" hgap="10">
    <children>

        <VBox GridPane.columnIndex="1" GridPane.rowIndex="0" alignment="CENTER" styleClass="image">
            <ImageView layoutX="20.0" layoutY="20.0" fitHeight="100.0" fitWidth="100.0"
                       pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="https://specials-images.forbesimg.com/imageserve/5b8eb1b3a7ea434b99d54b36/960x0.jpg?fit=scale"/>
                </image>
            </ImageView>
            <padding>
                <Insets bottom="20.0" />
            </padding>
        </VBox>

        <Label text="User:" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="label"/>
        <TextField fx:id="tf_user" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="TextField"/>
        <Label text="Password:" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="label"/>
        <PasswordField fx:id="tf_password" GridPane.columnIndex="1" GridPane.rowIndex="4" styleClass="TextField"/>

        <VBox GridPane.columnIndex="1" GridPane.rowIndex="5" alignment="CENTER">
            <children>
                <Button text="Sign In" fx:id="bt_login"  styleClass="buttonIn"/>
                <Label text="or" styleClass="label">
                    <padding>
                        <Insets bottom="7.0" top="7.0" />
                    </padding>
                </Label>
                <Button text="Sign Up!" fx:id="bt_signup" styleClass="buttonUp" onAction="#signUp"/>
            </children>

            <padding>
                <Insets bottom="16.0" left="16.0" right="16.0" top="20.0" />
            </padding>
        </VBox>



    </children>
    </GridPane>
    </StackPane>
</AnchorPane>